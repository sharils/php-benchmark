#!/usr/bin/env php
<?php
foreach ([
    '../vendor',
    '../../..',
] as $binToVendor) {
    $autoload = __DIR__ . "/$binToVendor/autoload.php";
    if (is_readable($autoload)) {
        require $autoload;
    }
}

$opt = getopt('is::t::');

$phrofiler = new Sharils\Phrofiler();

if (isset($opt['i'])) {
    $phrofiler->iife(true);
}

if (isset($opt['s'])) {
    $phrofiler->setUp($opt['s']);
}

if (isset($opt['t'])) {
    $phrofiler->tearDown($opt['t']);
}

$profiles = $phrofiler->profile(array_slice($argv, count($opt) + 1));
foreach ($profiles as $profile) {
    $profile->ratio =  $profile->ratio * 100 . '%';
    $profile->time .= ' (average seconds)';
    foreach ([
        'snippet',
        'timeFilename',
        'wholeFilename',
        'time',
        'ratio'
    ] as $profileKey) {
        printf("%13s: %s\n", $profileKey, $profile->$profileKey);
    }
    echo PHP_EOL;
}
